{
  "name": "bimeh-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "PORT=7600 next dev",
    "prebuild": "pnpm run db:create || true && pnpm run db:check && pnpm run db:migrate && pnpm run seed:admin || echo 'Database not available, skipping db operations'",
    "build": "next build",
    "start": "PORT=7600 next start",
    "lint": "eslint",
    "db:create": "tsx src/scripts/create-db.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:check": "tsx src/scripts/check-db.ts",
    "seed:admin": "tsx --env-file=.env src/scripts/seed-super-admin.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:prod": "docker-compose -f docker-compose.yml up --build"
  },
